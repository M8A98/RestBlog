<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %> </div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST"> <!--HTML does not support PUT or delete-->
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title%>"><!--Instead of placeholder we used value.-->
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[img]" value="<%= blog.img %>">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" required> <%= blog.body %> </textarea> <!--In the case of textarea, make the change within it.-->
        </div>
        <input class="ui inverted primary button" type="submit">
    </form>
</div>

<% include partials/footer %>